{
  "version": 2,
  "name": "tasks-api",
  "regions": ["fra1"],
  "builds": [
    {
      "src": "dist/main.js",
      "use": "@vercel/node"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Credentials", "value": "true" },
        {
          "key": "Access-Control-Allow-Origin",
          "value": "http://127.0.0.1:5173"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Accept, Accept-Version, Content-Type, Origin, Authorization, Cookie"
        }
      ]
    }
  ]
}
